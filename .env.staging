# Email Assist - Staging Environment Configuration

# Environment
NODE_ENV=staging
APP_URL=https://staging.emailassist.com

# Database Configuration
POSTGRES_DB=email_assist_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_secure_password_change_me

# Redis Configuration
REDIS_PASSWORD=staging_redis_password_change_me

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_minimum_32_characters_long_change_me

# OpenAI Configuration (use test/development key)
OPENAI_API_KEY=sk-staging_openai_api_key_here

# Email Provider Configuration (use test credentials)
GMAIL_CLIENT_ID=staging_gmail_client_id
GMAIL_CLIENT_SECRET=staging_gmail_client_secret
OUTLOOK_CLIENT_ID=staging_outlook_client_id
OUTLOOK_CLIENT_SECRET=staging_outlook_client_secret

# Third-party Integrations (use test accounts)
TRELLO_API_KEY=staging_trello_api_key
JIRA_API_TOKEN=staging_jira_api_token

# Monitoring Configuration
GRAFANA_PASSWORD=staging_grafana_password

# Application Configuration
CORS_ORIGIN=https://staging.emailassist.com
LOG_LEVEL=debug

# Email Configuration (use staging SMTP)
SMTP_HOST=smtp.staging.emailassist.com
SMTP_PORT=587
SMTP_USER=noreply@staging.emailassist.com
SMTP_PASSWORD=staging_smtp_password
FROM_EMAIL=noreply@staging.emailassist.com

# Rate Limiting (more lenient for testing)
API_RATE_LIMIT=200
AUTH_RATE_LIMIT=10

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_THIRD_PARTY_INTEGRATIONS=true
ENABLE_EMAIL_SYNC=true
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Performance Configuration
DATABASE_POOL_SIZE=10
REDIS_POOL_SIZE=5
WORKER_CONCURRENCY=2

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=7200
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_TIME=300