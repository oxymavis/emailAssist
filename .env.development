# Email Assist - Development Environment Configuration

# Environment
NODE_ENV=development
APP_URL=http://localhost:5173

# Database Configuration
POSTGRES_DB=email_assist_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password

# Redis Configuration
REDIS_PASSWORD=dev_password

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_for_development_only

# Debug Configuration
DEBUG=app:*
LOG_LEVEL=debug

# OpenAI Configuration (optional for development)
OPENAI_API_KEY=sk-development_key_optional

# Email Provider Configuration (use test credentials or leave empty)
GMAIL_CLIENT_ID=dev_gmail_client_id
GMAIL_CLIENT_SECRET=dev_gmail_client_secret
OUTLOOK_CLIENT_ID=dev_outlook_client_id
OUTLOOK_CLIENT_SECRET=dev_outlook_client_secret

# Third-party Integrations (optional for development)
TRELLO_API_KEY=dev_trello_api_key
JIRA_API_TOKEN=dev_jira_api_token

# Monitoring Configuration
GRAFANA_PASSWORD=dev_password

# Application Configuration
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email Configuration (use Mailhog for testing)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@dev.emailassist.com

# Rate Limiting (disabled for development)
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=50

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_THIRD_PARTY_INTEGRATIONS=false
ENABLE_EMAIL_SYNC=false
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Performance Configuration
DATABASE_POOL_SIZE=5
REDIS_POOL_SIZE=2
WORKER_CONCURRENCY=1

# Security Configuration (relaxed for development)
BCRYPT_ROUNDS=8
SESSION_TIMEOUT=86400  # 24 hours
MAX_LOGIN_ATTEMPTS=100
LOCKOUT_TIME=60

# Development Tools
ENABLE_MOCK_DATA=true
ENABLE_DEBUG_ROUTES=true
ENABLE_DEV_TOOLS=true